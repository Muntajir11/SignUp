<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="styles/main.css">
  <title>Sign-Up </title>
</head>

<body>
  <div class="container_1">


    <form id="login-form" autocomplete="off" method="post" class="form">
      <p id="heading" style="font-family: cursive;">Welcome!</p>
      <div class="field">
        <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
          viewBox="0 0 16 16">
          <path
            d="M13.106 7.222c0-2.967-2.249-5.032-5.482-5.032-3.35 0-5.646 2.318-5.646 5.702 0 3.493 2.235 5.708 5.762 5.708.862 0 1.689-.123 2.304-.335v-.862c-.43.199-1.354.328-2.29.328-2.926 0-4.813-1.88-4.813-4.798 0-2.844 1.921-4.881 4.594-4.881 2.735 0 4.608 1.688 4.608 4.156 0 1.682-.554 2.769-1.416 2.769-.492 0-.772-.28-.772-.76V5.206H8.923v.834h-.11c-.266-.595-.881-.964-1.6-.964-1.4 0-2.378 1.162-2.378 2.823 0 1.737.957 2.906 2.379 2.906.8 0 1.415-.39 1.709-1.087h.11c.081.67.703 1.148 1.503 1.148 1.572 0 2.57-1.415 2.57-3.643zm-7.177.704c0-1.197.54-1.907 1.456-1.907.93 0 1.524.738 1.524 1.907S8.308 9.84 7.371 9.84c-.895 0-1.442-.725-1.442-1.914z">
          </path>
        </svg>
        <input autocomplete="off" placeholder="Email" name="username" class="input-field" id="emailField" type="text">
      </div>
      <div class="field">
        <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
          viewBox="0 0 16 16">
          <path
            d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z">
          </path>
        </svg>
        <input placeholder="Password" id="passwordField" name="password" class="input-field" type="password">
      </div>
      <div class="btn">

        <button id="loginButton"
          class="button1">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Login&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
        <button id="registerButton" class="button2">Sign Up</button>

      </div>


      <button id="google" style="margin: 10px;" class="signin">
        Sign In with Google
        <svg viewBox="0 0 256 262" preserveAspectRatio="xMidYMid" xmlns="http://www.w3.org/2000/svg">
          <path
            d="M255.878 133.451c0-10.734-.871-18.567-2.756-26.69H130.55v48.448h71.947c-1.45 12.04-9.283 30.172-26.69 42.356l-.244 1.622 38.755 30.023 2.685.268c24.659-22.774 38.875-56.282 38.875-96.027"
            fill="#4285F4"></path>
          <path
            d="M130.55 261.1c35.248 0 64.839-11.605 86.453-31.622l-41.196-31.913c-11.024 7.688-25.82 13.055-45.257 13.055-34.523 0-63.824-22.773-74.269-54.25l-1.531.13-40.298 31.187-.527 1.465C35.393 231.798 79.49 261.1 130.55 261.1"
            fill="#34A853"></path>
          <path
            d="M56.281 156.37c-2.756-8.123-4.351-16.827-4.351-25.82 0-8.994 1.595-17.697 4.206-25.82l-.073-1.73L15.26 71.312l-1.335.635C5.077 89.644 0 109.517 0 130.55s5.077 40.905 13.925 58.602l42.356-32.782"
            fill="#FBBC05"></path>
          <path
            d="M130.55 50.479c24.514 0 41.05 10.589 50.479 19.438l36.844-35.974C195.245 12.91 165.798 0 130.55 0 79.49 0 35.393 29.301 13.925 71.947l42.211 32.783c10.59-31.477 39.891-54.251 74.414-54.251"
            fill="#EB4335"></path>
        </svg>
      </button>


    </form>

  </div>

  <script>

    document.addEventListener('DOMContentLoaded', () => {
      const loginButton = document.getElementById('loginButton');
      const registerButton = document.getElementById('registerButton');
      const loginForm = document.getElementById('login-form');
      const googleButton = document.getElementById('google');

      const emailField = document.getElementById('emailField');
      const passwordField = document.getElementById('passwordField');


      loginButton.addEventListener('click', () => {
        if (passwordField.value.trim() === '' || emailField.value.trim() === '') {
          event.preventDefault();
          window.alert('Please enter email and password');
          window.location.href = '/';
        } else {
          loginForm.action = '/login';
          loginForm.submit();
        }
      });

      registerButton.addEventListener('click', () => {
        if (passwordField.value.trim() === '' || emailField.value.trim() === '') {
          event.preventDefault();
          window.alert('Please enter email and password');
          window.location.href = '/';
        } else {
          loginForm.action = '/register';
          loginForm.submit();
        }
      });


      googleButton.addEventListener('click', () => {
        event.preventDefault();
        window.location.href = '/auth/google';
      });
    });



  </script>
</body>

</html>